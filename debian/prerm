#!/bin/sh
set -e

case "$1" in
remove | upgrade | deconfigure)
	# Check for processes using SDK files (informational only)
	if [ -d "/opt/distiller-cm5-sdk" ]; then
		if lsof +D /opt/distiller-cm5-sdk 2>/dev/null | grep -q -v COMMAND; then
			echo "Warning: Some processes may be using distiller-cm5-sdk files"
		fi
	fi
	;;

failed-upgrade)
	;;

*)
	echo "prerm called with unknown argument \`$1'" >&2
	exit 1
	;;
esac

#DEBHELPER#

exit 0